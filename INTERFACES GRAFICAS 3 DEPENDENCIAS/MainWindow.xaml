<Window x:Class="INTERFACES_GRAFICAS_3_DEPENDENCIAS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INTERFACES_GRAFICAS_3_DEPENDENCIAS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Width="75" Height="25" Background="Green" Foreground="White">
            Lisandro
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="FontSize" Value="43"></Setter>
                        </Trigger>
                    </Style.Triggers>
                    
                </Style>
            </Button.Style>
        </Button>

    </Grid>
</Window>
